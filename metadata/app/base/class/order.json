{
  "abstract": false,
  "description": "Заказ на покупку",
  "label": "Заказ",
  "attrs": [
    {
      "name": "customer",
      "label": "Покупатель",
      "type": "user",
      "commonSearchable": false,
      "createOnRead": false,
      "defaultValue": "$user",
      "eagerLoading": true,
      "escape": true,
      "hidden": false,
      "hideEmpty": false,
      "history": false,
      "multiple": false,
      "orderNumber": 10,
      "sortable": false,
      "sortableRelation": false,
      "readOnly": false,
      "required": false,
      "selectSearchable": false,
      "signed": false,
      "trim": true,
      "unique": false
    },
    {
      "name": "items",
      "label": "Элементы",
      "type": "backref",
      "description": "Элементы заказа",
      "commands": [
        "create",
        "edit",
        "delete"
      ],
      "commonSearchable": false,
      "createOnRead": false,
      "eagerLoading": false,
      "escape": true,
      "hidden": false,
      "hideEmpty": false,
      "history": false,
      "multiple": true,
      "orderNumber": 60,
      "sortable": false,
      "sortableRelation": false,
      "refAttr": "order",
      "refClass": "orderItem",
      "readOnly": false,
      "required": false,
      "selectSearchable": false,
      "signed": false,
      "trim": true,
      "unique": false
    },
    {
      "name": "totalPrice",
      "label": "Общая цена",
      "type": "calc",
      "description": "Общая цена всех элементов заказа",
      "commonSearchable": false,
      "createOnRead": false,
      "defaultValue": 0,
      "eagerLoading": false,
      "escape": true,
      "expression": [
        "$+",
        [
          "$query",
          "column",
          "orderItem",
          {
            "key": "price"
          },
          {
            "order": ".$key"
          }
        ]
      ],
      "hidden": false,
      "hideEmpty": false,
      "history": false,
      "multiple": false,
      "orderNumber": 70,
      "sortable": false,
      "sortableRelation": false,
      "readOnly": false,
      "required": false,
      "selectSearchable": false,
      "signed": false,
      "trim": true,
      "unique": false
    },
    {
      "name": "_createdAt",
      "label": "Создано",
      "type": "date",
      "viewType": "localDatetime",
      "commonSearchable": false,
      "createOnRead": false,
      "eagerLoading": false,
      "escape": true,
      "hidden": false,
      "hideEmpty": false,
      "history": false,
      "multiple": false,
      "orderNumber": 80,
      "sortable": false,
      "sortableRelation": false,
      "readOnly": true,
      "required": false,
      "selectSearchable": false,
      "signed": false,
      "trim": true,
      "unique": false
    },
    {
      "name": "_state",
      "label": "Состояние",
      "type": "string",
      "viewType": "state",
      "commonSearchable": false,
      "createOnRead": false,
      "eagerLoading": false,
      "escape": true,
      "hidden": false,
      "hideEmpty": false,
      "history": false,
      "multiple": false,
      "orderNumber": 90,
      "sortable": false,
      "sortableRelation": false,
      "readOnly": true,
      "required": false,
      "selectSearchable": false,
      "signed": false,
      "trim": true,
      "unique": false
    }
  ],
  "states": [
    {
      "name": "draft",
      "label": "Черновик",
      "defaults": true,
      "description": "Состояние редактирования заказа",
      "readOnly": false
    },
    {
      "name": "confirmed",
      "label": "Подтвержден",
      "defaults": false,
      "description": "Заказ подтвержден покупателем",
      "readOnly": true
    },
    {
      "name": "approved",
      "label": "Согласован",
      "defaults": false,
      "description": "Заказ утвержден продавцом",
      "readOnly": true
    }
  ],
  "transitions": [
    {
      "name": "confirm",
      "label": "Подтвердить",
      "description": "Заказ подтверждается покупателем",
      "nullStartState": false,
      "startStates": [
        "draft"
      ],
      "finalState": "confirmed",
      "condition": [
        "$notEmpty",
        ".items"
      ],
      "orderNumber": 10
    },
    {
      "name": "edit",
      "label": "Редактировать",
      "nullStartState": false,
      "startStates": [
        "confirmed"
      ],
      "finalState": "draft",
      "orderNumber": 20
    },
    {
      "name": "approve",
      "label": "Согласовать",
      "description": "Заказ согласуется менеджером",
      "nullStartState": false,
      "startStates": [
        "confirmed"
      ],
      "finalState": "approved",
      "orderNumber": 30
    }
  ]
}